<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <style>
        /* General Styles */
         /* General Styles */
/* Background image for the whole body */
body {
    background-image: url('/images/background.jpg'); /* Make sure the path matches the image location */
    background-size: cover; /* Ensure the image covers the entire background */
    background-position: center; /* Center the image */
    background-attachment: fixed; /* Make the background fixed while scrolling */
    height: 100vh; /* Ensure the background covers the entire page */
    margin: 0;
    padding: 0;
}

        header {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 5px;
        }

        header h1 {
            margin: 0;
            font-size: 2.5em;
        }

        header a {
            color: white;
            text-decoration: none;
            padding: 5px 10px;
            background-color: #333;
            border-radius: 5px;
            font-size: 1.1em;
            transition: background-color 0.3s ease;
        }

        header a:hover {
            background-color: #555;
        }

        /* Main Container */
        main {
            padding: 10px;
        }

        .form-container {
            background-color: white;
            padding: 10px;
            border-radius: 4px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .form-container h2 {
            color: #333;
            margin-bottom: 5px;
            font-size: 1.8em;
        }

        .form-container form {
            display: grid;
            gap: 3px;
        }

        .form-container label {
            font-size: 1.1em;
            color: #333;
        }

        .form-container input {
            padding: 5px;
            font-size: 1.1em;
            border: 1px solid #ddd;
            border-radius: 5px;
            width: 100%;
        }

        .form-container button {
            background-color: #4caf4feb;
            color: white;
            border: none;
            padding: 5px 10px;
            font-size: 1.1em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form-container button:hover {
            background-color: #45a049;
        }

        /* Customer List */
        .customer-list {
            background-color: white;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .customer-list h2 {
            font-size: 1.8em;
            color: #333;
            margin-bottom: 6px;
        }

        .customer-list table {
            width: 100%;
            border-collapse: collapse;
        }

        .customer-list th, .customer-list td {
            padding: 5px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .customer-list th {
            background-color: #4CAF50;
            color: white;
        }

        .customer-list tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        /* Footer */
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 5px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        footer p {
            margin: 0;
            font-size: 1em;
        }
    </style>
</head>
<body>
    <header>
        <h1>Customer Management</h1>
        <a href="/" class="btn">Home</a>
    </header>

    <main>
        <div class="form-container">
            <h2>Enter Customer Details</h2>
            
            <!-- Customer Input Form -->
            <form action="/add-customer" method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="phone">Phone:</label>
                <input type="text" id="phone" name="phone" required>

                <label for="address">Address:</label>
                <input type="text" id="address" name="address" required>

                <button type="submit" class="btn">Add Customer</button>
            </form>
        </div>

        <div class="customer-list">
            <h2>All Customers</h2>

            <!-- Display existing customers if any -->
            <% if (customers && customers.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% customers.forEach(customer => { %>
                            <tr>
                                <td><%= customer.name %></td>
                                <td><%= customer.email %></td>
                                <td><%= customer.phone %></td>
                                <td><%= customer.address %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No customers found.</p>
            <% } %>
        </div>
    </main>

    <footer>
        <p>Â© 2024 Online Book Sales</p>
    </footer>
</body>
</html>
